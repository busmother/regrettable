<% if flash[:messages] %>
    <div class="alert alert-info">
        <em><%= flash[:messages] %></em>
    <div>
<% end %>

<%= form_for @apology do |f| %>
    <%= f.label "Apology:" %>
    <%= f.text_area :body %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :incident_id, value: @incident.id %>
<br><br>
    <%= f.submit "Apologize" %>
<% end %>