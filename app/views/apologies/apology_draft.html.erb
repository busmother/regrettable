<% if @apology.forgiven?(current_user) %>
    <% case @apology.forgives_count %>
    <% when > 2 %>
        <em><%= link_to "You", current_user%> and <%=@apology.forgives_count-1%> others forgive this:</em>
    <% when == 2 %>
        <em><%= link_to "You", current_user%> and 1 other forgive this:</em>
    <% when == 1 %>
        <em><%= link_to "You", current_user%> forgive this:</em>
    <% else %>
    <em>No one forgives this yet - will you be the first?</em>
    <% end %>
<% else %>
    <% case @apology.forgives_count %>
    <% when > 2 %>
        <em><%= link_to @apology.forgivenesses.first.user.name, @apology.forgivenesses.first.user%> and <%=@apology.forgives_count-1%> others forgive this.</em>
    <% when == 2 %>
        <em><%= link_to @apology.forgivenesses.first.user.name, @apology.forgivenesses.first.user%> and 1 other forgive this.</em>
    <% when == 1 %>
        <em><%= link_to @apology.forgivenesses.first.user.name, @apology.forgivenesses.first.user%> forgives this.</em>
    <% else %>
    <em>No one forgives this yet - will you be the first?</em>
    <% end %>
<% end %>
