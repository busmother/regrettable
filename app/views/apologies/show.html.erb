<b> <%=link_to @apology_user.name, @user_path%> </b> apologises for <b> <%=link_to @apology.incident.name, @apology.incident%> </b> 
<br>
<br>
<%= @apology.body%>
<br>
<br>

<% if @apology.forgiven?(current_user) %>
    <%= button_to "Forgiven", forgiveness_path(@apology), method: "put", disabled: true %>
<% else %>
    <%= button_to "Forgive", forgiveness_path(@apology), method: "put" %>
<% end %>


<%if @apology.forgivenesses.count > 3%>
    <em><%= link_to @apology.forgivenesses.first.user.name, @user_path%> and <%=@apology.forgivenesses.count-1%> others forgive this.</em>
<%elsif @apology.forgivenesses.count == 2 %>
    <em><%= link_to @apology.forgivenesses.first.user.name, @user_path%> and 1 other forgive this.</em>
<%elsif @apology.forgivenesses.count == 1%>
    <em><%= link_to @apology.forgivenesses.first.user.name, @user_path%> forgives this.</em>
<%else%>
    <em>No one forgives this yet - will you be the first?</em>
<%end%>