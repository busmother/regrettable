
<b><%= @incident.name%></b>
<br>
<br>
<% if @incident.apologized?(current_user) && @incident.apologies.count > 2%>
    <em><%link_to current_user.name, current_user%>, <%link_to @incident.apologies.first.user.name, @incident.apologies.first.user%> and <%=@incident.apologies.count-2%> others forgive for this:</em>
<% elsif @incident.apologized?(current_user) && @incident.apologies.count == 2 %>
    <em><%link_to current_user.name, current_user%> and <%link_to @incident.apologies.first.user.name, @incident.apologies.first.user%> forgive this:</em>
<% elsif @incident.apologized?(current_user) && @incident.apologies.count == 1 %>
    <em><%link_to current_user.name, current_user%> forgives this:</em>
<% elsif !@incident.apologized?(current_user) && @incident.apologies.count > 3%>
    <em><%= link_to @incident.apologies.first.user.name, @incident.apologies.first.user%> and <%=@incident.apologies.count-1%> others apologize for this.</em>
<% elsif !@incident.apologized?(current_user) && @incident.apologies.count == 2%>
    <em><%= link_to @incident.apologies.first.user.name, @incident.apologies.first.user %> and <%= link_to @incident.apologies.last.user.name, @incident.apologies.last.user%> forgive this.</em>
<% elsif !@incident.apologized?(current_user) && @incident.apologies.count == 1%>
    <em><%= link_to @incident.apologies.first.users.first.name, @incident.apologies.first.users.first %> forgive this.</em>
<% else %>
    <em>No one forgives this. Will you be first?.</em>
<%end%>
