<% if @incident.apologized?(current_user) && @incident.apologies.count > 2%>
    <em><%link_to current_user.name, @user_path%>, <%link_to @incident.apologies.first.users.first.name, @user_path%> and <%=@incident.apologies.users.count-2%> others apologize for this:</em>
<% elsif @incident.apologized?(current_user) && @incident.apologies.count == 2 %>
    <em><%link_to current_user.name, @user_path%> and <%link_to @incident.apologies.first.users.first.name, @user_path%> apologize for this:</em>
<% elsif @incident.apologized?(current_user) && @incident.apologies.count == 1 %>
    <em><%link_to current_user.name, @user_path%> apologize for this:</em>
<% elsif !@incident.apologized?(current_user) && @incident.apologies.count > 3%>
    <em><%= link_to @incident.apologies.first.users.first.name, @user_path%> and <%=@incident.apologies.users.count-1%> others apologize for this.</em>
<% elsif !@incident.apologized?(current_user) && @incident.apologies.count == 2%>
    <em><%= link_to @incident.apologies.first.users.first.name, @user_path %> and <%= link_to @incident.apologies.last.users.last.name, @user_path%> apologize for this.</em>
<% elsif !@incident.apologized?(current_user) && @incident.apologies.count == 1%>
    <em><%= link_to @incident.apologies.first.users.first.name, @user_path %> apologizes for this.</em>
<% else %>
    <em>No one has apologized for this. Will you be first?.</em>
<%end%>
